<Window x:Class="Application.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Application"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800" Background="Transparent">
    <Border CornerRadius="15" Grid.RowSpan="2">
        <Border.Background>
            <LinearGradientBrush>
                <GradientStop Color="OrangeRed" Offset="0.0"/>
                <GradientStop Color="HotPink" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>

        </Grid>
    </Border>
</Window>
